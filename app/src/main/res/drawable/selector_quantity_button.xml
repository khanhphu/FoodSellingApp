<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/cam" /> <!-- Lighter orange when pressed -->
            <stroke
                android:width="2dp"
                android:color="@color/cam" /> <!-- Darker orange border -->
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>

    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="oval">
            <solid android:color="@color/cam" /> <!-- Lighter orange when focused -->
            <stroke
                android:width="2dp"
                android:color="@color/cam" /> <!-- Darker orange border -->
            <size
                android:width="30dp"
                android:height="30dp" />
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/xam" /> <!-- White background by default -->
            <stroke
                android:width="2dp"
                android:color="@color/cam" /> <!-- Darker orange border -->
            <size
                android:width="30dp"
                android:height="20dp" />
        </shape>
    </item>

</selector>