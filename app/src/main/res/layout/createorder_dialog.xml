<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp"
    android:padding="16dp"
    android:paddingTop="56dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Trash Icon -->

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="-10dp"
        app:srcCompat="@drawable/ic_check"
        android:background="@drawable/rounded_border"
        android:padding="8dp"/>

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You have created order!"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <!-- Description -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check email to track your order status."
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#666666"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/goToOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Order"
            android:textColor="#666666"
            android:backgroundTint="@android:color/white"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/continueShopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue to shopping"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/cammoi"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>
</LinearLayout>