<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".User_Menu">
<include layout="@layout/custom_toolbar"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/secSearch"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:hint="Bạn muốn ăn gì?"
        android:background="@color/vangNhatHon"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_serach"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu4User"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:listitem="@layout/list_user_mon"/>
        </LinearLayout>
</LinearLayout>