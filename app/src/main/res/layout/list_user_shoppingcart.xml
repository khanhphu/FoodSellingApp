<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:elevation="30dp"
    tools:ignore="MissingDefaultResource">
<LinearLayout
    android:weightSum="8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView

        android:layout_gravity="center"
        android:id="@+id/imgMon"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/imgmon1"/>
    <LinearLayout
        android:layout_marginLeft="2dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="TenMon"
            android:textColor="@color/camDam"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/giaMon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GiaMon"
                android:textSize="15sp"
                android:textColor="@color/cam"/>

            <TextView
                android:id="@+id/sl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:maxLines="1"
                android:text="SLuong"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/khungtext"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnGiam"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View

                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="@color/camDam" />
            </LinearLayout>
            <TextView
                android:id="@+id/slDat"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:layout_gravity="center"

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View

                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:background="@color/camDam" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnTang"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="15sp" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/camDam"
        android:orientation="vertical">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/btnDelete"
            android:layout_width="38dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_close" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>