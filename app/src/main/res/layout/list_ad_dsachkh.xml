<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/trangNga"
    android:gravity="center_vertical">



    <!-- Circular ImageView for Customer -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/fashionista"
        app:civ_border_width="1dp"
        app:civ_border_color="#E0E0E0"
    android:layout_marginEnd="12dp" />

    <!-- Customer Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
        android:ellipsize="end"
        android:maxLines="1" />

        <TextView
            android:id="@+id/txtCusMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#616161"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1" />

        <TextView
            android:id="@+id/txtSLDonHang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200 Đơn"
            android:textSize="14sp"
            android:textColor="#424242"
        android:layout_marginTop="2dp" />
    </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
