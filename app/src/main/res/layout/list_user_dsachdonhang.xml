<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF"
    android:layout_margin="16dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="16dp"
android:gravity="center_vertical">

<!-- Order Image -->
<ImageView
    android:id="@+id/imgMon"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:src="@drawable/ic_order"
    android:background="@color/camDam"
android:scaleType="centerInside"
android:layout_marginEnd="16dp" />

<!-- Order Details -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <!-- Header Row: Order ID and Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtMaDH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MaDonHang"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#F57C00"
        android:ellipsize="end"
        android:maxLines="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnXacNhan"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check"
                android:contentDescription="Confirm"
                android:padding="4dp"
                android:visibility="invisible"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/btnDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:contentDescription="Delete"
                android:padding="4dp"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <!-- Customer Name Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#F57C00" />

        <TextView
            android:id="@+id/txtTenKH"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DataTenKH"
            android:textSize="14sp"
            android:textColor="#212121"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1" />
    </LinearLayout>

    <!-- Order Date Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày đặt:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#F57C00" />

        <TextView
            android:id="@+id/txtNgayDat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ngaydat"
            android:textSize="10sp"
            android:textColor="#212121"
            android:layout_marginStart="8dp"
            android:ellipsize="end"
            android:maxLines="1" />
    </LinearLayout>

    <!-- Status Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tr.thái:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#F57C00" />

        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="choXN"
            android:textSize="14sp"
            android:textColor="#212121"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/txtNgayXacNhan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="(ngayXacNhan)"
            android:textSize="10sp"
            android:textStyle="italic"
            android:textColor="#757575"
        android:visibility="invisible"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1" />
    </LinearLayout>

    <!-- Total Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#F57C00" />

        <TextView
            android:id="@+id/txtTong"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="19000"
            android:textSize="14sp"
            android:textColor="#212121"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>